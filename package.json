{
  "name": "koatty_config",
  "version": "1.1.2",
  "description": "Configuration loader for Koatty.",
  "scripts": {
    "build": "del-cli --force dist && tsc",
    "eslint": "eslint --ext .ts,.js ./",
    "prepublishOnly": "npm test && npm run build",
    "prerelease": "npm test && npm run build",
    "release": "standard-version",
    "release:pre": "npm run release -- --prerelease",
    "release:major": "npm run release -- --release-as major",
    "release:minor": "npm run release -- --release-as minor",
    "pub": "git push --follow-tags origin && npm publish",
    "test": "npm run eslint && jest --passWithNoTests",
    "test:cov": "jest --collectCoverage --detectOpenHandles",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "main": "./dist/index.js",
  "engines": {
    "node": ">12.0.0"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/core": "^7.x.x",
    "@babel/plugin-proposal-decorators": "^7.x.x",
    "@babel/preset-env": "^7.x.x",
    "@babel/preset-typescript": "^7.x.x",
    "@commitlint/cli": "^16.x.x",
    "@commitlint/config-conventional": "^16.x.x",
    "@types/jest": "^27.x.x",
    "@types/koa": "^2.x.x",
    "@types/node": "^16.x.x",
    "@types/rc": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^5.x.x",
    "@typescript-eslint/parser": "^5.x.x",
    "conventional-changelog-cli": "^2.x.x",
    "del-cli": "^4.x.x",
    "eslint": "^8.x.x",
    "eslint-plugin-jest": "^25.x.x",
    "husky": "^4.x.x",
    "jest": "^27.x.x",
    "jest-html-reporters": "^2.x.x",
    "standard-version": "^9.x.x",
    "ts-jest": "^27.x.x",
    "ts-node": "^10.x.x",
    "typescript": "^4.x.x"
  },
  "dependencies": {
    "koatty_container": "^1.x.x",
    "koatty_lib": "^1.x.x",
    "koatty_loader": "^1.x.x",
    "rc": "^1.2.8"
  },
  "peerDependencies": {
    "koatty_container": "^1.x.x",
    "koatty_lib": "^1.x.x",
    "koatty_loader": "^1.x.x"
  }
